                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/attachment_name"
                    android:background="@color/grey_200"
                    android:src="@drawable/ic_clear_black_18dp" />
            </RelativeLayout>
        </LinearLayout>
