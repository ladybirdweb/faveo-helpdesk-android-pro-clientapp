<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ticket"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_ripple"
        android:focusable="true"
        android:padding="3dp">

        <TextView
            android:id="@+id/textView_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            android:alpha=".54"
            android:background="@drawable/rectangle1"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:text="@string/aaaa_0001_0000001"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/statusView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_ticket_number"
            android:layout_toEndOf="@+id/textView_ticket_number"
            android:alpha=".54"
            android:background="@drawable/rectangle1"
            android:fontFamily="sans-serif-medium"
            android:text="Open"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/textView_ticket_subject"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_ticket_number"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_below="@+id/textView_ticket_number"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="Test Tciket"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_client_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ticket_subject"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textView_ticket_subject"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:alpha=".68"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:maxLines="1"
            android:text="@string/dummy_name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/agentassigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_ticket_number"
            android:layout_below="@+id/textView_client_name"
            android:alpha=".88"
            android:fontFamily="sans-serif-smallcaps"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="Sayar@ladybirdweb.com"
            android:textColor="#696969"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <!--<ImageView-->
            <!--android:id="@+id/imageView_default_profile"-->
