<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/ticket"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="7dp"
    android:background="@color/colorAccent"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="1dp"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <TextView
            android:id="@+id/textView_ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

                <TextView
                    android:id="@+id/textView_ticket_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="8dp"
                    android:alpha=".68"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:maxLines="1"
                    android:text="@string/aaaa_0001_0000001"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/textView_ticket_subject"
                    android:layout_alignTop="@+id/textView_ticket_number"
                    android:src="@drawable/createticketicon"
                    android:tint="@color/faveo"/>

                <TextView
                    android:id="@+id/textView_ticket_subject"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView_ticket_number"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="-23dp"
                    android:layout_marginTop="33dp"
                    android:alpha=".68"
                    android:ellipsize="end"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:maxLines="1"
                    android:text="Using full width cards"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/textView_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_ticket_subject"
                    android:layout_marginLeft="12dp"
                    android:alpha=".68"
                    android:ellipsize="end"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:maxLines="1"
                    android:layout_marginTop="7dp"
                    android:text="Matthias Robbers"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <com.github.curioustechizen.ago.RelativeTimeTextView
                    android:id="@+id/textView_ticket_time"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/textView_ticket_number"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="244dp"
                    android:layout_marginTop="67dp"
                    android:layout_marginEnd="0dp"
                    android:alpha=".68"
                    android:paddingRight="4dp"
                    android:fontFamily="@font/hintedlainesansregular"
                    android:maxLines="1"
                    android:gravity="end"
                    android:text="@string/dummy_date"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

        <TextView
            android:id="@+id/countthread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_ticket_subject"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="23dp"
            android:layout_toEndOf="@+id/textView_ticket_number"
            android:text="(2)"
            android:textColor="#606060"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="visible" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
